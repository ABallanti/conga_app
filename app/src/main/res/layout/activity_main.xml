<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout3"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/playbtn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:text="PLAY"
    android:width="0dp"
    app:layout_constraintBottom_toTopOf="@+id/stopbtn"
    app:layout_constraintHorizontal_weight="0.2"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintWidth_percent="0.2"/>

  <SeekBar
    android:id="@+id/speedBar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:max="300"
    android:min="0"
    app:layout_constraintBottom_toBottomOf="@+id/playbtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/playbtn"
    app:layout_constraintTop_toTopOf="@+id/playbtn"
    app:layout_constraintWidth_percent="0.7"/>

  <Button
    android:id="@+id/stopbtn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:text="STOP"
    app:layout_constraintStart_toStartOf="@+id/playbtn"
    app:layout_constraintTop_toBottomOf="@+id/playbtn"
    app:layout_constraintWidth_percent="0.2"/>

  <CheckBox
    android:id="@+id/ThreeTwoRumbaclave"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:text="3-2 RC"
    android:buttonTint="@android:color/holo_purple"
    app:layout_constraintStart_toStartOf="@+id/stopbtn"
    app:layout_constraintTop_toBottomOf="@+id/stopbtn"/>

  <SeekBar
    android:id="@+id/ThreeTwoRumbaClaveSKB"
    android:layout_width="0dp"
    android:layout_height="17dp"
    android:max="10"
    android:min="0"
    app:layout_constraintBottom_toBottomOf="@+id/ThreeTwoRumbaclave"
    app:layout_constraintStart_toStartOf="@+id/speedBar"
    app:layout_constraintTop_toBottomOf="@+id/stopbtn"
    app:layout_constraintTop_toTopOf="@+id/ThreeTwoRumbaclave"
    app:layout_constraintWidth_percent="0.7"/>

  <CheckBox
    android:id="@+id/Cata"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1sp"
    android:text="Cata"
    android:buttonTint="@android:color/holo_orange_light"
    app:layout_constraintStart_toStartOf="@+id/ThreeTwoRumbaclave"
    app:layout_constraintTop_toBottomOf="@+id/ThreeTwoRumbaclave"/>

  <SeekBar
    android:id="@+id/CataSKB"
    android:layout_width="0dp"
    android:layout_height="17dp"
    android:max="10"
    android:min="0"
    app:layout_constraintBottom_toBottomOf="@+id/Cata"
    app:layout_constraintStart_toStartOf="@+id/speedBar"
    app:layout_constraintTop_toTopOf="@+id/Cata"
    app:layout_constraintWidth_percent="0.7"/>

  <CheckBox
    android:id="@+id/CowBell"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:buttonTint="@android:color/holo_blue_dark"
    android:text="Cow Bell"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Cata"/>

  <SeekBar
    android:id="@+id/CowBellSKB"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:max="10"
    android:min="0"
    app:layout_constraintBottom_toBottomOf="@+id/CowBell"
    app:layout_constraintStart_toStartOf="@+id/speedBar"
    app:layout_constraintTop_toTopOf="@+id/CowBell"
    app:layout_constraintWidth_percent="0.7"/>

  <!--- %%%%%%%%%%%% LIST VIEW %%%%%%%%%%%% -->

  <TextView
    android:id="@+id/textView5"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:text="  Bit  "
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/CowBell"/>

  <TextView
    android:id="@+id/textView6"
    android:text="B"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"

    app:layout_constraintBottom_toBottomOf="@+id/textView5"
    app:layout_constraintEnd_toStartOf="@+id/textView7"
    app:layout_constraintStart_toEndOf="@+id/textView5"
    app:layout_constraintTop_toTopOf="@+id/textView5"/>

  <TextView
    android:id="@+id/textView7"
    android:text="M"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView6"
    app:layout_constraintEnd_toStartOf="@+id/textView8"
    app:layout_constraintStart_toEndOf="@+id/textView6"
    app:layout_constraintTop_toTopOf="@+id/textView6"/>

  <TextView
    android:id="@+id/textView8"
    android:text="O"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView7"
    app:layout_constraintEnd_toStartOf="@+id/textView9"
    app:layout_constraintStart_toEndOf="@+id/textView7"
    app:layout_constraintTop_toTopOf="@+id/textView7"/>

  <TextView
    android:id="@+id/textView9"
    android:text="S"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView8"
    app:layout_constraintEnd_toStartOf="@+id/textView10"
    app:layout_constraintStart_toEndOf="@+id/textView8"
    app:layout_constraintTop_toTopOf="@+id/textView8"/>

  <TextView
    android:id="@+id/textView10"
    android:text="t"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView9"
    app:layout_constraintEnd_toStartOf="@+id/textView11"
    app:layout_constraintStart_toEndOf="@+id/textView9"
    app:layout_constraintTop_toTopOf="@+id/textView9"/>

  <TextView
    android:id="@+id/textView11"
    android:text="C"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    android:textColor="@android:color/holo_blue_dark"
    app:layout_constraintBottom_toBottomOf="@+id/textView10"
    app:layout_constraintEnd_toStartOf="@+id/textView12"
    app:layout_constraintStart_toEndOf="@+id/textView10"
    app:layout_constraintTop_toTopOf="@+id/textView10"/>

  <TextView
    android:id="@+id/textView12"
    android:text="Bit"
    style="@style/TextViewStyleList"
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView11"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView11"
    app:layout_constraintTop_toTopOf="@+id/textView11"/>


  <ListView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ListHalfBit"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView5"
    tools:context=".MainActivity">

  </ListView>

</android.support.constraint.ConstraintLayout>
